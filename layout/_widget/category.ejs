<% if (site.categories.length){ %>
	<div class="widget tag">
		<h4><%= __('categories') %></h4>
		<ul class="entry">
		<% site.categories.sort('name').each(function(item){ %>
			<li><a href="<%- config.root %><%- item.path %>"><%= item.name %><span> <i class="fa fa-angle-left"></i><%= item.posts.length %></span></a><i class="fa fa-angle-right"></i></li>
		<% }); %>
		</ul>
	</div>
<% } %>